{
  "manifest_version": 2,
  "name": "Tab Audio Transcription",
  "version": "1.0.0",
  "description": "Record and transcribe audio playing in browser tabs using open source transcription engines",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "permissions": [
    "activeTab",
    "tabCapture",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": {
      "48": "icons/icon-48.png"
    },
    "default_title": "Tab Audio Transcription",
    "default_popup": "popup/popup.html"
  },
  "web_accessible_resources": [
    "lib/*"
  ]
}
